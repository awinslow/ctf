<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:background="@drawable/stars"
  android:layout_height="fill_parent" android:orientation="vertical" android:stretchColumns="1">
	<TableLayout android:id="@+id/TableLayout1" android:layout_height="match_parent" android:layout_width="fill_parent">
		<TableRow>
			<Button
			    android:typeface="monospace"
				android:text="Soldier"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:layout_weight="1"
				android:layout_margin="4dip"
				android:textSize="20dp"
				android:background="#33CC00"
				android:gravity="center_horizontal" android:id="@+id/soldier">
			</Button>
		</TableRow>
		<TableRow>
			<TextView 
    			android:text="Choosing the Soldier class will give your character more attack and defense power." 
    			android:id="@+id/classtext1" 
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:layout_margin="4dip"
    			android:textColor="#33CC00"
    			android:typeface="monospace"
    			android:gravity="center_horizontal">
    		</TextView>
		</TableRow>
		<TableRow>
			<Button
				android:text="Sentinel"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:layout_weight="1"
				android:layout_margin="4dip"
				android:typeface="monospace"
				android:textSize="20dp"
				android:background="#33CC00"
				android:gravity="center_horizontal" android:id="@+id/sentinel">
			</Button>
		</TableRow>
		<TableRow>
			<TextView 
    			android:text="Choosing the Sentinel class will give the character more dexterity, giving the character a higher chance of landing an attack or dodging one." 
    			android:id="@+id/classtext2" 
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:textColor="#33CC00"
    			android:layout_margin="4dip"
    			android:typeface="monospace"
    			android:gravity="center_horizontal">
    		</TextView>
		</TableRow>
		<TableRow>
			<Button
				android:text="Hacker"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:layout_weight="1"
				android:layout_margin="4dip"
				android:textSize="20dp"
				android:background="#33CC00"
				android:typeface="monospace"
				android:gravity="center_horizontal" android:id="@+id/hacker">
			</Button>
		</TableRow>
		<TableRow>
			<TextView 
    			android:text="Choosing the Hacker class will allow users to use special attacks like stealing items and disabling enemy attacks." 
    			android:id="@+id/classtext3" 
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:typeface="monospace"
    			android:textColor="#33CC00"
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal">
    		</TextView>
		</TableRow>
	</TableLayout>
</LinearLayout>
