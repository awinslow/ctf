<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:orientation="vertical" android:layout_height="match_parent">
    <CheckedTextView android:text="Change your password here" android:id="@+id/checkedTextView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckedTextView>
    <TextView android:text="Username" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:id="@+id/ChangepassUname" android:layout_height="wrap_content" android:text="" ></EditText>
    <TextView android:text="Old Password" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:id="@+id/ChangepassOldPass" android:layout_height="wrap_content" android:text="" android:inputType="textPassword"></EditText>
    <TextView android:text="New Password" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:id="@+id/ChangepassNewPass" android:layout_height="wrap_content" android:text="" android:inputType="textPassword"></EditText>
    <TextView android:text="Confirm New Password" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:id="@+id/ChangepassConfirmPass" android:layout_height="wrap_content" android:text="" android:inputType="textPassword"></EditText>
    <Button android:text="Submit" android:id="@+id/ChangepassSubmit" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    <Button android:text="Back" android:id="@+id/ChangepassBack" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
