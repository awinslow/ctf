<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:text="Create a new user" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <TextView android:text="Username" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:text="" android:layout_height="wrap_content" android:id="@+id/newUserUser"></EditText>
    <TextView android:text="Password" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:text="" android:layout_height="wrap_content" android:id="@+id/newUserPassword" android:inputType="textPassword"></EditText>
    <TextView android:text="Confirm Password" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:text="" android:layout_height="wrap_content" android:id="@+id/newUserConfirm" android:inputType="textPassword"></EditText>
    <TextView android:text="Email" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_width="match_parent" android:text="" android:layout_height="wrap_content" android:id="@+id/newUserEmail"></EditText>
    <Button android:text="Submit" android:id="@+id/newUserSubmit" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    <Button android:text="Back" android:id="@+id/newUserBack" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
