<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainscreenturnon"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Welcome to Cyber Annihilation!"
    android:textColor="#3399FF"
    android:typeface="monospace"
    />


<Button android:textColor="#000000" android:layout_margin="2dip" android:padding="10dip" android:textSize="20dp" android:background="@drawable/rounded_button" android:typeface="monospace" android:layout_height="wrap_content" android:id="@+id/MainSignin" android:text="Sign In" android:layout_width="match_parent"></Button>
<Button android:textColor="#000000" android:layout_margin="2dip" android:padding="10dip" android:textSize="20dp" android:background="@drawable/rounded_button" android:typeface="monospace" android:layout_height="wrap_content" android:id="@+id/MainCreate" android:text="Create A Character" android:layout_width="match_parent"></Button>
<Button android:textColor="#000000" android:layout_margin="2dip" android:padding="10dip" android:textSize="20dp" android:background="@drawable/rounded_button" android:typeface="monospace" android:text="Exit" android:id="@+id/MainExit" android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
<Button android:textColor="#000000" android:layout_margin="2dip" android:padding="10dip" android:textSize="20dp" android:background="@drawable/rounded_button" android:typeface="monospace" android:text="Logout" android:id="@+id/logout" android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
<Button android:textColor="#000000" android:layout_margin="2dip" android:padding="10dip" android:textSize="20dp" android:background="@drawable/rounded_button" android:typeface="monospace" android:text="Start" android:id="@+id/battle" android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
</LinearLayout>
