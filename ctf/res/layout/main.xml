<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Welcome to our awesome game!"
    />


<Button android:layout_height="wrap_content" android:id="@+id/MainSignin" android:text="Sign In" android:layout_width="wrap_content"></Button>
<Button android:layout_height="wrap_content" android:id="@+id/MainCreate" android:text="Create A Character" android:layout_width="wrap_content"></Button>
<Button android:text="Exit" android:id="@+id/MainExit" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
<Button android:text="Logout" android:id="@+id/logout" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
