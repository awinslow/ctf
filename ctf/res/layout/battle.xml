<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:background="@drawable/supernovap"
  android:layout_height="fill_parent" android:orientation="vertical" android:stretchColumns="1"
  android:id="@+id/BattleScreen">
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="match_parent" android:layout_width="fill_parent">
    	<TableRow>
    		<TextView
    			android:textColor="#33CC00" android:typeface="monospace" 
    			android:text="Enemy"
    			android:layout_width="0dip"
    			android_layout_height="wrap_content"
    			android:padding="10dip"
    			android:layout_weight="1"
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/enemyName">
    		</TextView>
    		<TextView
    			android:textColor="#33CC00" android:typeface="monospace" 
    		    android:text="You"
    			android:layout_width="0dip"
    			android_layout_height="wrap_content"
    			android:padding="10dip"
    			android:layout_weight="1"
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/yourName">
    		</TextView>
    	</TableRow>
    	    <TableRow>
    		<TextView
    			android:textColor="#33CC00" android:typeface="monospace" 
    			android:text="Enemy Class"
    			android:layout_width="0dip"
    			android_layout_height="wrap_content"
    			android:padding="10dip"
    			android:layout_weight="1"
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/enemyClass">
    		</TextView>
    		<TextView
    			android:textColor="#33CC00" android:typeface="monospace" 
    		    android:text="Your Class"
    			android:layout_width="0dip"
    			android_layout_height="wrap_content"
    			android:padding="10dip"
    			android:layout_weight="1"
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/yourClass">
    		</TextView>
    	</TableRow>
    	    <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
    	        <TextView
    	        android:textColor="#33CC00" android:typeface="monospace" 
    			android:layout_width="0dip"
    			android_layout_height="wrap_content"
    			android:padding="0dip"
    			android:layout_weight="1"
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/enemyDmg" android:visibility="invisible"/>
    			<TextView
    			android:textColor="#33CC00" android:typeface="monospace" 
    			android:layout_width="0dip"
    			android_layout_height="wrap_content"
    			android:padding="0dip"
    			android:layout_weight="1"
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/myDmg" android:visibility="invisible" />
    		</TableRow>
    	<TableRow>
    		<ImageView android:layout_width="0dip" android:layout_height="120dip" android:padding="10dip" android:layout_weight="1" android:layout_margin="4dip" android:src="@drawable/icon" android:id="@+id/enemyPic" android:adjustViewBounds="true"></ImageView>  
 			<ImageView android:padding="10dip" android:layout_weight="1" android:layout_margin="4dip" android:src="@drawable/icon" android:id="@+id/yourPic" android:layout_width="0dip" android:layout_height="120dip" android:adjustViewBounds="true"></ImageView>
    	</TableRow>
    	<TableRow>
    	    <ProgressBar android:layout_width="0dip" android:layout_height="wrap_content" android:padding="10dip" android:layout_weight="1" android:layout_margin="4dip" style="?android:attr/progressBarStyleHorizontal" android:id="@+id/EnemyHealthBar" android:adjustViewBounds="true"></ProgressBar>
			<ProgressBar android:layout_width="0dip" android:layout_height="wrap_content" android:padding="10dip" android:layout_weight="1" android:layout_margin="4dip" style="?android:attr/progressBarStyleHorizontal" android:id="@+id/MyHealthBar" android:adjustViewBounds="true"></ProgressBar>
		</TableRow>
		<TableRow>
			<TextView android:textColor="#33CC00" android:typeface="monospace" android:id="@+id/enemyHealth" android:padding="10dip" android:layout_weight="1" android:layout_width="0dip" android:gravity="center_horizontal" android:layout_margin="4dip" android:text="Health: %" android:layout_height="wrap_content"></TextView>
			<TextView android:textColor="#33CC00" android:typeface="monospace" android:id="@+id/yourHealth" android:padding="10dip" android:layout_weight="1" android:layout_width="0dip" android:gravity="center_horizontal" android:layout_margin="4dip" android:text="Health: %" android:layout_height="wrap_content"></TextView>
		</TableRow>
    	<TableRow>
    		<TextView 
    			android:textColor="#33CC00" android:typeface="monospace" 
    			android:text="AP:" 
    			android:id="@+id/apcount" 
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal">
    		</TextView>
    		<Button
    			android:background="#33CC00" android:typeface="monospace" 
    			android:text="Attack 0"
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/attack0">
    		</Button>
    		<Button
    			android:background="#33CC00" android:typeface="monospace" 
    			android:text="Attack 1"
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/attack1">
    		</Button>
    		
    	</TableRow>
    	<TableRow>
    		<Button
    			android:background="#33CC00" android:typeface="monospace" 
    			android:text="Use Item"
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/UseItem">
    		</Button>
    		<Button
    			android:background="#33CC00" android:typeface="monospace" 
    		    android:text="Attack 2"
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/attack2">
    		</Button>
    		<Button
    			android:background="#33CC00" android:typeface="monospace" 
    			android:text="Attack 3"
    			android:layout_width="0dip" 
    			android:layout_height="wrap_content" 
    			android:padding="10dip" 
    			android:layout_weight="1" 
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/attack3">
    		</Button>
    	</TableRow>
    	<TableRow>
    		<Button
    			android:background="#33CC00" android:typeface="monospace" 
				android:text="Back"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:layout_weight="1"
				android:layout_margin="4dip"
				android:gravity="center_horizontal" android:id="@+id/battleBack">
			</Button>


</TableRow>
    </TableLayout>
</LinearLayout>
