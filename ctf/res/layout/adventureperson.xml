<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:background="@drawable/stars"
  android:layout_height="fill_parent" android:orientation="vertical" android:stretchColumns="*">
  <TableLayout android:id="@+id/TableLayout1" android:layout_height="match_parent" android:layout_width="match_parent">
  <TableRow>
  	<TextView 
  	android:textColor="#3399FF" android:typeface="monospace" 
    			android:textSize="18dp"
    			android:layout_width="0dip"
    			android_layout_height="wrap_content"
    			android:padding="10dip"
    			android:layout_weight="1"
    			android:layout_margin="4dip"
    			android:gravity="center_horizontal" android:id="@+id/apname" android:text="TextView" ></TextView>
  </TableRow>
  <TableRow>
  	<ImageView 
  	android:layout_height="200dip" android:padding="10dip" android:layout_weight="1" android:layout_margin="4dip" android:src="@drawable/icon" android:id="@+id/appic" android:adjustViewBounds="true"
  	></ImageView>
  </TableRow>
  <TableRow>
  	<Button 
  				    android:textColor="#000000" 
			    android:typeface="monospace"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:layout_weight="1"
				android:layout_margin="4dip"
				android:textSize="20dp"
				android:background="@drawable/rounded_button"
				android:gravity="center_horizontal"
  	
  	android:id="@+id/apbattle" android:text="Battle" ></Button>
  </TableRow>
  <TableRow>
  	<Button 
  	  				    android:textColor="#000000" 
			    android:typeface="monospace"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:layout_weight="1"
				android:layout_margin="4dip"
				android:textSize="20dp"
				android:background="@drawable/rounded_button"
				android:gravity="center_horizontal"
  	
  	android:id="@+id/apback" android:text="Back"></Button>
  </TableRow>
  </TableLayout>
    
</LinearLayout>
