<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:background="@drawable/mainscreenturnon"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:textColor="#33CC00" android:typeface="monospace" android:text="Create a new user" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <TextView android:textColor="#33CC00" android:typeface="monospace" android:text="Username:" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_margin="2dip" android:padding="20dip" android:background="#339900" android:typeface="monospace" android:layout_width="match_parent" android:text="" android:layout_height="wrap_content" android:id="@+id/newUserUser"></EditText>
    <TextView android:textColor="#33CC00" android:typeface="monospace" android:text="Password:" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_margin="2dip" android:padding="20dip" android:background="#339900" android:typeface="monospace" android:layout_width="match_parent" android:text="" android:layout_height="wrap_content" android:id="@+id/newUserPassword" android:inputType="textPassword"></EditText>
    <TextView android:textColor="#33CC00" android:typeface="monospace" android:text="Confirm Password:" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_margin="2dip" android:padding="20dip" android:background="#339900" android:typeface="monospace" android:layout_width="match_parent" android:text="" android:layout_height="wrap_content" android:id="@+id/newUserConfirm" android:inputType="textPassword"></EditText>
    <TextView android:textColor="#33CC00" android:typeface="monospace" android:text="Email:" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_margin="2dip" android:padding="20dip" android:background="#339900" android:typeface="monospace" android:layout_width="match_parent" android:text="" android:layout_height="wrap_content" android:id="@+id/newUserEmail"></EditText>
    <Button android:textColor="#000000" android:layout_margin="2dip" android:padding="10dip" android:textSize="20dp" android:background="#33CC00" android:typeface="monospace" android:text="Submit" android:id="@+id/newUserSubmit" android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
    <Button android:textColor="#000000" android:layout_margin="2dip" android:padding="10dip" android:textSize="20dp" android:background="#33CC00" android:typeface="monospace" android:text="Back" android:id="@+id/newUserBack" android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
</LinearLayout>
